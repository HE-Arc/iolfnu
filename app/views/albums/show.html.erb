<h1>Album</h1>
<div class="row">

  <input type="hidden" id="albumID" value="<%= @album.id %>">

<p>
    <b><%= @album.title %></b>
</p>
<p>
    <b><%= @album.description %></b>
</p>

  <div class="form-actions">
    <%= link_to 'Back', albums_path, :class => 'btn btn-mini'  %>
    <%= link_to 'Edit album', edit_album_path(@album), :class => 'btn btn-mini' %>
    <%= link_to 'Delete album', album_path(@album), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini' %>
  </div>
</div>

<h2>Photos</h2>
<div class="row small-up-2 medium-up-3 large-up-4">
<% unless @photos.empty? %>
    <% @photos.each do |photo| %>
    <div class="column">
        <img class="thumbnail" src=<%= photo.image.url %>>
      <div class="caption">
          <%= photo.image_file_name %>
      </div>
    </div>
  <% end %>
<% end %>
</div>
