<div class="row">
  <h1>Album</h1>

  <input type="hidden" id="albumID" value="<%= @album.id %>">

  <p>
    <b>Title: </b>
    <%= @album.title %>
  </p>

  <p>
    <b>Description: </b>
    <%= @album.description %>
  </p>

  <div class="form-actions">
    <%= link_to 'Back', albums_path, :class => 'btn btn-mini'  %>
    <%= link_to 'Edit album', edit_album_path(@album), :class => 'btn btn-mini' %>
    <%= link_to 'Delete album', album_path(@album), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini' %>
  </div>

<h2>Photos</h2>
</div>

<div class="row">
  <ul class="thumbnails files">
<% unless @photos.empty? %>
  <% @photos.each do |photo| %>
    <li class="span3" id="photo_<%= photo.id %>">
    <div class="thumbnail">
      <%= image_tag photo.image.url %>
      <div class="caption">
        <p style="text-align: center;">
        <%= link_to "Edit photo", photo_path(photo) %>

        <%=
          link_to "Delete photo", photo,
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>

        </p>
      </div>
    </div>
    </li>
  <% end %>
<% end %>
</ul>
</div>
