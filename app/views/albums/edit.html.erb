<% content_for :title, @album.title %>

<h1>Ã‰dition de <%= @album.title %></h1>

<%= render :partial => 'form' %>

<h2>Photos (cliquer pour supprimer)</h2>
<div class="row small-up-2 medium-up-3 large-up-4">
<% unless @photos.empty? %>
    <% @photos.each do |photo| %>
    <div class="column">
        <%= link_to image_tag(photo.image.url, :class => "thumbnail"),
        photo_path(photo), :method => "delete", data: {confirm: "Are you sure ?"} %>
    </div>
  <% end %>
<% end %>
