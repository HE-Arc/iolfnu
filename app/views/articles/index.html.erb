<% content_for :title, "iolfnu - Articles" %>

<h1>Listing articles</h1>

<%= link_to 'Nouvel article', new_article_path,
            { :class=>"button" } %>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
    </tr>
    <% end %>
</table>
